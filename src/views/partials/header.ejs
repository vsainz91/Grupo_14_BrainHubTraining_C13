<header class="header">
    <nav class="nav flex">
        <div><input type="checkbox" id="menu-burger"></div>
        <label for="menu-burger" class="bar-btn">
            <i class="fas fa-bars"></i>
        </label>
        <ul class="burger-display">
            <li><a class="active" href="#" target="_self">INICIO</a></li>
            <li><a href="#">CATEGORÍAS</a></li>
            <li><a href="#">CONTACTO</a></li>
        </ul>
    </nav>
    <div class="logo"> <a href="/"><img src="/images/logobrainhub4.1.png" alt="Logo Brainhub" id="logo"></a></div>
    <div class="buscador">
        <form action="/search" method="GET" class="search-form">
            <input type="text" name="search" placeholder="Buscar cursos" class="search-input active">
            <button class="search-button" type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
    <nav>
        <ul class="menu">
            <li class="menu-item"> <a href="/">INICIO</a>
            </li>
            <li class="menu-item">CATEGORIAS
                <ul class="submenu">
                    <li><a href="/#idiomas">IDIOMAS</a></li>
                    <li><a href="/#tecnologia">PROGRAMACIÓN</a></li>
                </ul>
            </li>
            <li class="menu-item"> <a href="#brainhub-about"> ACERCA DE </a></li>
        </ul>
    </nav>
    <div id="carrito-icon"><a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i></a></div>
    <% if (typeof session.user != "undefined") { %>
        <li><a href="/users/profile">PERFIL</a></li>
        <li><a href="/users/logout">LOGOUT</a></li>
        <% if (session.user.rol === "ADMIN") { %>
            <li><a href="/admin">Admin</a></li>
        <% } %>
    <% }else{ %> 
    <div class="user"> <a href="/users/login"> LOGIN </a></div>
    <% } %> 
    <div class="header_avatar">
        <% if (typeof session.user != "undefined") { %>
            <div class="avatar_session"></div>
            <img src="images/avatar/<%= session.user.avatar %>" alt="">
        <% } %> 
    </div>
</header>
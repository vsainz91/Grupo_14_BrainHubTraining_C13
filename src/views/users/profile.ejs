<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head') %> 
    <script src="/js/profile.js"></script>
<body>
    <%- include ('../partials/header') %> 
    <div class="contenedor_perfil">
        <form action="/users/profile" class="profile-form">
            <div class="profile-form-header">
                <h1 class="form-title">Mi Perfil</span></h1>
            </div>
            <div class="profile-box_avatar">
                <h3 class="profile-subtitle">Avatar</h3>
                <div class="profile-avatar"><img src="/images/avatar/<%= user.avatar %>" alt="" /></div>
            </div>
            <div class="input_file-avatar">
                <span class="avatar_span">Editar imagen</span>
                <input type="file" name="avatar" id="avatar">
            </div>
            <div class="profile-info">
                <p>Nombre: <%= user.name %></p>
                <p>Email: <%= user.email %></p>
            </div>
            <div class="profile_editinfo" action="/users/perfil?_method=PUT" method="POST">
                <label for="name" class="form-edit"> Nuevo nombre </label>
                <input type="text" name="name" class="form-edit" id="name" value="<%= locals.old && old.name %>">
                <% if (locals.errors && errors.name) { %>
                    <small class="text-danger" style="color: red;"><%= errors.name.msg %></small>
                    <% } %>
            </div>
            <div class="interests">
                <h3 class="profile_h3">Tus intereses</h3>
                <label for="photography">Fotografía</label>
                <input type="checkbox" name="intereses" id="photography" value="photography">
                <label for="dev">Desarrollo Web</label>
                <input type="checkbox" name="intereses" id="dev" value="dev">
                <label for="languages">Idiomas</label>
                <input type="checkbox" name="intereses" id="languages" value="languages">
            </div>
            <!-- <div class="userData_container">
                <h3 class="profile_h3">Datos de contacto</h3>
                <div class="form_box">
                    <div class="input-container">
                        <input type="email" class="input-style" name="email" placeholder="Ingrese su email" value="" >
                    </div>
                    <div class="input-container">
                        <input type="tel" class="input-style" name="tel" placeholder="Ingrese su teléfono">
                    </div>
                </div>
            </div> -->
            <button class="btn_editar-profile" type="submit">Editar Datos</button>
        </form>
    </div>
    <%- include ('../partials/footer') %>
</body>
</html>
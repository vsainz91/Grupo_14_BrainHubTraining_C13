<!DOCTYPE html>
<html lang="en">
<%- include ('../partials/head') %>
    <body class="login_body">
        <%- include ('../partials/header') %>
            <section class="container-login">
                <p class="text-end">¿Ya estás registrado? <a href="/users/login">¡Logueate!</a></p>
                <h2 class="title">Registrarse</h2>
                <form class="container-form" action="/users/register" method="post" enctype="multipart/form-data">
                    <div class="input-container">
                        <input class="input-log" type="nombre" class="input-style" name="name" value="<%= locals.old && old.name %>"
                            placeholder="Ingrese su nombre y apellido">
                            <% if (locals.errors && errors.name){
                                %><small class="text-danger"><%= errors.name.msg %></small>
                                <% } %>
                        <input class="input-log" type="email" class="input-style" name="email" value="<%= locals.old && old.email %>"
                            placeholder="Ingrese su email">
                            <% if (locals.errors && errors.email){
                                %><small class="text-danger"><%= errors.email.msg %></small>
                                <% } %>
                        <input class="input-log" type="password" name="pass" placeholder="Crea tu contraseña">
                        <% if (locals.errors && errors.pass){
                            %><small class="text-danger"><%= errors.pass.msg %></small>
                            <% } %>
                        <label for="password2"> Repita su contraseña</label>
                        <input class="input-log" type="password" name="password2" required id="password2"
                            placeholder="Confirma tu contraseña">
                            <% if (locals.errors && errors.password2){
                                %><small class="text-danger"><%= errors.password2.msg %></small>
                                <% } %>
                    </div>
                    <div class="upload-avatar">
                        <label for="avatar">Avatar</label>
                        <input type="file" name="avatar" id="avatar">
                    </div>
                    <div>
                    <button class="btn-register btn">Registrate</button>
                    <button class="btn" type="reset">Limpiar</button>
                    </div>
                </form>
            </section>
            <%- include ('../partials/footer') %>
    </body>

</html>
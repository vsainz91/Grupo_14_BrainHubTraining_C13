<!DOCTYPE html>
<html lang="es">
<%- include ('../partials/head') %>
<body>
	<%- include ('../partials/header') %>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: <%= keyword %> </h2>
			</div>
			<% if (searchResult.length > 0) { %>
			 	<% searchResult.forEach(course => { %>
					<div class="">
						<section class="product-box">
							<a href="/products/detail/<%- course.id %>">
								<figure class="product-box_image">
									<img src="/images/<%- course.image %>" alt="imagen del curso">
								</figure>
								<article class="product-box_data">
									<h2>$<%- toThousand(course.price) %> </h2>
									<p><%- course.name %> </p>
								</article>
							</a>
						</section>
					</div>
				<% }) %>
			<% } else { %>
			<div class="col-12">
				<h2 class="courses-title" style="color: tomato;">No hay cursos que coincidan con esa búsqueda</h2>
			</div>
			<% } %>
		</div>
	</div>
	<%- include('../partials/footer') %>

</body>	
</html>
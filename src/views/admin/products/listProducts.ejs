<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body class="body-admin-products">
    <%- include('../partials/header') %>
      <table class="main-container-products">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Categor√≠a</th>
            <th scope="col">Editar</th>
            <th scope="col">Eliminar</th>
          </tr>
        </thead>
        <tbody>
          <% course.forEach(course=> { %>
            <tr>
              <th scope="row">
                <%- course.id %>
              </th>
              <td >
                <%- course.name %>
              </td>
              <td>
                <%- course.price %>
              </td>
              <td>
                <%- course.category_id %>
              </td>
              <td width="10px">
                <a href="/admin/courses/edit/<%- course.id %>" class="btn btn-success">
                  <i class="fa-solid fa-pen-to-square" style="color: rgb(63, 177, 63);"></i>
                </a>
              </td>
              <td width="10px">
                <form action="/admin/courses/delete/<%- course.id %>?_method=DELETE" method="post">
                  <button class="btn btn-danger" type="submit" style="border: none; background-color:rgba(240, 248, 255, 0)">
                    <i class="fa-solid fa-trash-can" style="color: rgb(185, 16, 16);"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>


      <%- include('../partials/footer') %>

  </body>

</html>